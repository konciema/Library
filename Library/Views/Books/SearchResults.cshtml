@model List<BookSearch>

@{
    ViewData["Title"] = "Rezultati iskanja";
}

<h2>Rezultati iskanja</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Naslov</th>
                <th>Avtor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td><a asp-action="Details" asp-route-id="@book.BookID">@book.Title</a></td>
                    <td>@book.FirstName @book.LastName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found.</p>
}
